<div class="navigation-drawer">
  <ul>
    <li><%= link "Categories", to: category_path(@conn, :index) %></li>
  </ul>
  <ul>
    <%= if current_user(@conn) do %>
      <li><%= link "Log Out", to: auth_path(@conn, :delete) %></li>
    <% else %>
      <li><%= link "Log In", to: auth_path(@conn, :login) %></li>
    <% end %>
  </ul>
</div>
