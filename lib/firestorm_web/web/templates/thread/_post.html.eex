<div class="post-item" id="post-<%= @post.id %>">
  <div class="item-metadata">
    <div class="avatar">
      <img src="<%= avatar_url(@post.user) %>" class="user-avatar -borderless" />
    </div>
    <%= link "@#{@post.user.username}", to: user_path(@conn, :show, @post.user_id), class: "username" %>
    <%= time_abbr @post.inserted_at %>
  </div>

  <div class="body">
    <%= markdown(@post.body) %>
  </div>

  <%= for {url, oembed} <- @post.oembeds do %>
    <div class="oembed-for" data-oembed-url="<%= url %>">
      <%= render_oembed(oembed) %>
    </div>
  <% end %>

  <div class="post-item-actions">
    <!--
      <div class="reactions">
        ðŸ¦€
      </div>
    -->
    <div class="spacer"></div>
    <ul class="actions">
      <li class="link">
        <a href="<%= category_thread_path(@conn, :show, @category.id, @thread.id) %>#post-<%= @post.id %>" aria-label="link to post <%= @post.id %>">
          <i class="fa fa-link"></i>
        </a>
      </li>
      <!--
        <li class="reaction">
          <a class="reaction-picker" href="#">
            <i class="emoticon-faces"></i>
          </a>
        </li>
        <li class="quote">
          <a href="#">
            <i class="fa fa-quote-right"></i>
          </a>
        </li>
      -->
      <li class="reply">
        <%= link to: category_thread_post_path(@conn, :new, @category, @thread), "aria-label": "reply" do %>
          <i class="fa fa-reply"></i>
        <% end %>
      </li>
    </ul>
  </div>
</div>
