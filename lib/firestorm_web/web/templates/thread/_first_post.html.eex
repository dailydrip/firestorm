<div class="post-item first-post" id="post-<%= @post.id %>">
  <div class="body">
    <%= markdown(@post.body) %>
  </div>

  <%= for {url, oembed} <- @post.oembeds do %>
    <div class="oembed-for" data-oembed-url="<%= url %>">
      <%= render_oembed(oembed) %>
    </div>
  <% end %>

  <div class="post-item-actions">
    <div class="reply-count">
      <%= length(@thread.posts) - 1 %> replies
    </div>
    <div class="spacer"></div>
    <ul class="actions">
      <!--
        <li class="reaction">
          <a class="reaction-picker" href="#">
            <i class="emoticon-faces"></i>
          </a>
        </li>
      -->
      <li class="watch">
        <%= if @watched do %>
          <a href="<%= category_thread_path(@conn, :unwatch, @category, @thread) %>" aria-label="unwatch">
            <i class="fa fa-eye -highlight"></i>
          </a>
        <% else %>
          <a href="<%= category_thread_path(@conn, :watch, @category, @thread) %>" aria-label="watch">
            <i class="fa fa-eye"></i>
          </a>
        <% end %>
      </li>
      <!--
        <li class="quote">
          <a href="#">
            <i class="fa fa-quote-right"></i>
          </a>
        </li>
      -->
      <li class="reply">
        <%= link to: category_thread_post_path(@conn, :new, @category, @thread), "aria-label": "reply" do %>
          <i class="fa fa-reply"></i>
        <% end %>
      </li>
    </ul>
  </div>
</div>
